    <companies id="kfch_be_companies">
        <taxtopics>
            <taxtopic tc="1_1" score="3">Corporate Taxation</taxtopic>
            <taxtopic tc="1_3" score="2">Withholding Taxes</taxtopic>
            <taxtopic tc="1_1_22_2" score="3">Local / Municipal / Cantonal</taxtopic>
