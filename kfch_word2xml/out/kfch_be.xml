        </taxtopics>
        <title>A. Companies</title>
        <resident_companies id="kfch_be_resident_companies">
            <title>1. Resident companies</title>
            <corp_tax_rates_res id="kfch_be_corp_tax_rates_res">
                <name>
                    <extxref target="gtha_ch_be_s_1.2.">Corporate tax rates</extxref>
                </name>
                <values>
                    <value>basic rate 1.55% on 20% of the taxable income, but at least on CHF 10,000; 3.1% on next CHF 50,000; 4.6% on any excess;</value>
                    <value>basic tax is multiplied by a cantonal coefficient (3.06 for 2017) resulting in the effective cantonal tax;</value>
                    <value>municipal surcharge is equal to basic cantonal tax, multiplied by a municipal coefficient (for city Bern 1.54 for 2017)</value>
                    <value></value>
                </values>
            </corp_tax_rates_res>
            <tax_base id="kfch_be_tax_base">
                <name>
                    <extxref target="gtha_ch_canmun_s_1.3.1.">Tax base</extxref>
                </name>
                <values>
                    <value>worldwide (except income from business, PE or immovable property located outside canton)</value>
                    <value></value>
                </values>
            </tax_base>
            <companies_capital_gains_res id="kfch_be_companies_capital_gains_res">
                <name>
                    <extxref target="gtha_ch_be_s_1.1.">Capital gains</extxref>
                </name>
                <values>
                    <value>generally part of business income;</value>
                    <value>gains on immovable property in canton subject to real estate gains tax - progressive rates from 1.44% to 8.10%</value>
                    <value></value>
                </values>
            </companies_capital_gains_res>
            <companies_unilat_double_tax_relief id="kfch_be_companies_unilat_double_tax_relief">
                <name>
                    <extxref target="gtha_ch_canmun_s_6.2.1.">Unilateral double taxation relief</extxref>
                </name>
                <values>
                    <value>no (income from an enterprise, PE or immovable property abroad is exempt, as is capital pertaining to such assets)</value>
                    <value></value>
                </values>
            </companies_unilat_double_tax_relief>
        </resident_companies>
        <non_resident_companies id="kfch_be_non_resident_companies">
            <title>2. Non-resident companies</title>
            <corp_tax_rates_nonres id="kfch_be_corp_tax_rates_nonres">
                <name>
                    <extxref target="gtha_ch_be_s_1.2.">Corporate tax rates</extxref>
                </name>
                <values>
                    <value>basic rate 1.55% on 20% of the taxable income, but at least on CHF 10,000; 3.1% on next CHF 50,000; 4.6% on any excess;</value>
                    <value>basic tax is multiplied by a cantonal coefficient (3.06 for 2017) resulting in the effective cantonal tax;</value>
                    <value>municipal surcharge is equal to basic cantonal tax, multiplied by a municipal coefficient (for city Bern 1.54 for 2017)</value>
                    <value></value>
                </values>
            </corp_tax_rates_nonres>
            <companies_capital_gains_nonres id="kfch_be_companies_capital_gains_nonres">
                <name>
                    <extxref target="gtha_ch_s_2.2.">Capital gains on sale of shares in resident companies</extxref>
                </name>
                <values>
                    <value>yes;</value>
                    <value>participation relief subject to minimum shareholding requirements</value>
                    <value></value>
                </values>
            </companies_capital_gains_nonres>
        </non_resident_companies>
