        <title>B. Individuals</title>
        <resident_individuals id="kfch_be_resident_individuals">
            <title>1. Resident individuals</title>
            <income_tax_rates_res id="kfch_be_income_tax_rates_res">
                <name>
                    <extxref target="gthb_ch_be_s_1.6.">Income tax rates</extxref>
                </name>
                <values>
                    <value>progressive;</value>
                    <value>top rate 6.5% (over CHF 449,100 for single taxpayers; over CHF 463,600 for married taxpayers);</value>
                    <value>basic tax is multiplied by a cantonal coefficient (3.06 for 2017) resulting in the effective cantonal tax;</value>
                    <value>municipal surcharge is equal to basic cantonal tax, multiplied by a municipal coefficient (for city Bern 1.54 for 2017)</value>
                    <value></value>
                </values>
            </income_tax_rates_res>
            <ind_capital_gains_res id="kfch_be_ind_capital_gains_res">
                <name>
                    <extxref target="gthb_ch_be_s_1.3.">Capital gains</extxref>
                </name>
                <values>
                    <value>not subject to tax, if derived from private transactions</value>
                    <value></value>
                </values>
            </ind_capital_gains_res>
            <ind_unilat_double_tax_relief id="kfch_be_ind_unilat_double_tax_relief">
                <name>
                    <extxref target="gthb_ch_canmun_s_6.2.1.">Unilateral double taxation relief</extxref>
                </name>
                <values>
                    <value>yes</value>
                    <value></value>
                </values>
            </ind_unilat_double_tax_relief>
        </resident_individuals>
        <non_resident_individuals id="kfch_be_non_resident_individuals">
            <title>2. Non-resident individuals</title>
            <income_tax_rates_nonres id="kfch_be_income_tax_rates_nonres">
                <name>
                    <extxref target="gthb_ch_be_s_1.6.">Income tax rates</extxref>
                </name>
                <values>
                    <value>progressive;</value>
                    <value>top rate 6.5% (over CHF 449,100 for single taxpayers; over CHF 463,600 for married taxpayers);</value>
                    <value>basic tax is multiplied by a cantonal coefficient (3.06 for 2017) resulting in the effective cantonal tax;</value>
                    <value>municipal surcharge is equal to basic cantonal tax, multiplied by a municipal coefficient (for city Bern 1.54 for 2017)</value>
                    <value></value>
                </values>
            </income_tax_rates_nonres>
            <ind_capital_gains_nonres id="kfch_be_ind_capital_gains_nonres">
                <name>
                    <extxref target="gthb_ch_be_s_1.3.">Capital gains on sale of shares in resident companies</extxref>
                </name>
                <values>
                    <value>capital gains are not subject to income tax unless derived in the course of a business</value>
                    <value></value>
                </values>
            </ind_capital_gains_nonres>
        </non_resident_individuals>
        <ind_employment_income id="kfch_be_ind_employment_income">
            <name>
                <extxref target="gthb_ch_canmun_s_6.2.3.">Employment income</extxref>
            </name>
            <values>
                <value>depending on the profession</value>
                <value></value>
            </values>
        </ind_employment_income>
        <ind_fees_reduced id="kfch_be_ind_fees_reduced">
            <name>
                <extxref target="gthb_ch_be_s_4.">Fees (directors)</extxref>
            </name>
            <values>
                <value>18% (does not include additional 5% federal withholding tax)</value>
                <value></value>
            </values>
        </ind_fees_reduced>
